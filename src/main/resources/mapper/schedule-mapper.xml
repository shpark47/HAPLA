	<select id="selectTripByTripNo" resultType="Trip">
	    SELECT * FROM trip WHERE trip_no = #{tripNo}
	</select>
	
	<select id="selectDetailsByTripNo" resultType="Detail">
	    SELECT * FROM detail WHERE trip_no = #{tripNo}
	</select>
	
	<select id="selectMemosByTripNo" resultType="map">
	    SELECT detail_no AS key, memo AS value
	    FROM detail_memo
	    WHERE trip_no = #{tripNo}
	</select>
	
	<select id="selectPlacesByTripNo" resultMap="detailPlaceMap">
	    SELECT detail_no, place
	    FROM detail_place
	    WHERE trip_no = #{tripNo}
	</select>
	
	

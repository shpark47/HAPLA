<!--	</insert>-->
	<insert id="insertMemo">
		insert into detail_memo(detail_no, content)
		values (#{detailNo}, #{content})
	</insert>
	
	<insert id="insertPlace">
		insert into detail_place(detail_no, place_id)
		values (#{detailNo}, #{placeId})
	</insert>
	
